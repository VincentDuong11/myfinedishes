<%- include ("../partials/header"); %>

<div class="container">	
	<div class="row">	
		<h2 style="text-align: center;">
			Edit <strong><%= dish.name %></strong>
		</h2>
			<div id="form">
				<form action="/dishes/<%= dish._id %>?_method=PUT"  method ="POST">
					<div class="form-group">
						<label for="name">Name</label>
						<input class="form-control" type="text" name = "dish[name]" value= "<%= dish.name %>">
					</div>
					<div class="form-group">
						<label for="price">Price</label>
						<input class="form-control" type="number" name = "dish[price]" placeholder="<%= dish.price %>" min="0.01" step="0.01">
					</div>
					<div class="form-group">
						<label for="image">Image</label>
						<input class="form-control" type="text" name ="dish[image]" value= "<%= dish.image%>">
					</div>
					<div class="form-group">
    					<label for="location">Location</label>
    					<input class="form-control" type="text" name="location" id="location" value="<%= dish.location %>">
					</div>
					<div class="form-group">
						<label for="description">Description</label> <br>
						<textarea rows = "6" cols = "47" class="form-control" type="text" name ="dish[description]" value= "<%= dish.description%>" placeholder="add description here"></textarea>
					</div>
						<div class="form-group">
							<button class="btn btn-lg btn-default btn-block btn-primary">
						Submit!
					</button>
					</div>
				</form>
				<a href="/dishes/<%=dish._id%>">Go back</a>
			</div>		
	</div>
</div>


<%- include ("../partials/footer"); %>